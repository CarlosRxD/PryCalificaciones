<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_calificacion_simple"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp">

    <!-- Título de la materia -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Desarrollo mobile"
        android:textSize="18sp"
        android:textColor="#212121"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCalificacion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Calificación numérica -->
    <TextView
        android:id="@+id/tvCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.4"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTitulo"/>

    <!-- Texto “calificación no disponible” (invisible por defecto) -->
    <TextView
        android:id="@+id/tvNoDisponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calificación no disponible"
        android:textSize="14sp"
        android:textColor="#757575"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTitulo"/>

    <!-- Fecha de aplicación -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aplicado: 29/03/25"
        android:textSize="12sp"
        android:textColor="#424242"
        app:layout_constraintStart_toStartOf="@id/tvTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
